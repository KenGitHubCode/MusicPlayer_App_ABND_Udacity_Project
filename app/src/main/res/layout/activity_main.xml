<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.musicplayerstructurep4bykm.MainActivity">

    <TextView
        android:id="@+id/numbers"
        style="@style/HeaderStyle"
        android:background="@color/select_an_option"
        android:text="@string/select_an_option" />

    <TextView
        android:id="@+id/family"
        style="@style/CategoryStyle"
        android:background="@color/anjuna_beats"
        android:text="@string/anjuna_beats" />

    <TextView
        android:id="@+id/colors"
        style="@style/CategoryStyle"
        android:background="@color/armada"
        android:text="@string/armada" />

    <TextView
        android:id="@+id/phrases"
        style="@style/CategoryStyle"
        android:background="@color/a_state_of_trance"
        android:text="@string/a_state_of_trance" />

</LinearLayout>
