<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tan_background"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/myImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Album Art"
        android:gravity="center"
        android:minHeight="@dimen/list_item_height"
        android:minWidth="@dimen/list_item_height"
        android:orientation="vertical"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/tunes_player_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color"
        android:gravity="center"
        android:minHeight="@dimen/list_item_height"
        android:minWidth="@dimen/list_item_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/player_list_item_title"
            style="@style/ListStyleB"
            tools:text="Title Sample" />

        <TextView
            android:id="@+id/player_list_item_subtitle"
            style="@style/ListStyle"
            android:text="Sub Title Sample" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="Play Button"
            android:src="@drawable/ic_play_circle_filled_black_128dp" />
    </LinearLayout>

</LinearLayout>

